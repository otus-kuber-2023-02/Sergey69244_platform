apiVersion: v1
kind: PersistentVolume
metadata:
  name:  "backup-{{ name }}-pv"
  labels:
    pv-usage: "backup-{{ name }}"
spec:
  storageClassName: manual
  persistentVolumeReclaimPolicy: Retain
  claimRef:
     namespace: default
     name: "backup-{{ name }}-pvc"
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: 1Gi
  hostPath:
    path: /data/pv-backup/
