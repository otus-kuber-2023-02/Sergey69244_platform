apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}-pv
  labels:
    pv-usage: {{ name }}
spec:
  storageClassName: manual
  persistentVolumeReclaimPolicy: Retain
  claimRef:
     namespace: default
     name: "{{ name }}-pvc"
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /data/{{ name }}-pv/
